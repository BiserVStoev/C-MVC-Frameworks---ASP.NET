@model IEnumerable<CameraBazaar.Models.ViewModels.AllCamerasVm>

@{
    ViewBag.Title = "All Cameras";
}

<h2>All Cameras</h2>

@foreach (var camera in @Model)
{
    <div style="border: 2px solid black">
        <img src="@camera.ImageUrl" alt="cameraImage" width="200" height="200"/>
        @Html.DisplayFor(cam => camera.Make)
        @Html.DisplayFor(cam => camera.Model)
        $@Html.DisplayFor(cam => camera.Price)
        @Html.ActionLink("Details", "Details", new {id = camera.Id})
        @if (camera.Quantity == 0)
        {
            <span class="text-danger">Out of stock</span>
        }
        else
        {
            <span class="text-success">In stock</span>
        }
    </div> 
}
