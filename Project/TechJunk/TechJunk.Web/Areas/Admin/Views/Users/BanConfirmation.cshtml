@model TechJunk.Models.ViewModels.Admin.ShortUserDetails
@{
    ViewBag.Title = "Ban Confirmation";
}

<div>
    <p class="confirm-deletion">Are you sure that you want to ban this User?</p>
</div>

<div class="sales-container profile-sales-fix">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>@Html.Name("Email")</th>
                <th>@Html.Name("Sales posted")</th>
                <th>@Html.Name("Interests posted")</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Html.DisplayFor(vm => vm.Email)</td>
                <td>@Html.DisplayFor(vm => vm.NumberOfSales)</td>
                <td>@Html.DisplayFor(vm => vm.NumberOfInterests)</td>
                <td>
                    @Html.ActionLink("Details", "UserDetails", new { userId = Model.Id }, new { @class = "btn btn-info btn-lg" })
                </td>
            </tr>
        </tbody>
    </table>
</div>

<div class="buttons-container">
    @Html.ActionLink("Back to users list", "Users", null, new { @class = "btn btn-default btn-lg" })
    @using (Html.BeginForm("BanPost", "Users", FormMethod.Post, new { @class = "delete-margin-fix" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(vm => vm.Id)
        <input type="submit" value="Ban" class="btn btn-lg btn-danger" />
    }
</div>
