<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - TechJunk</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-T8Gy5hrqNKT+hzMclPo118YTQO6cYprQmhrYwIiQ/3axmI1hQomh7Ud2hPOy8SP1" crossorigin="anonymous">

</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <ul class="nav nav-pills nav-stacked admin-menu">
                    <li class="@ViewBag.IndexActive"><a href="/Admin"><i class="fa fa-cogs fa-fw"></i>Home</a></li>
                    <li class="@ViewBag.UsersActive"><a href="/Admin/Users"><i class="fa fa-user fa-fw"></i>Users</a></li>
                    <li class="@ViewBag.SalesActive"><a href="/Admin/Sales/All"><i class="fa fa-shopping-cart fa-fw"></i>Sales</a></li>
                    <li class="@ViewBag.InterestsActive"><a href="/Admin/Interests/All"><i class="fa fa-search fa-fw"></i>Interests</a></li>                 
                    <li class="@ViewBag.FeedbacksActive"><a href="/Admin/Feedbacks"><i class="fa fa-comments-o fa-fw"></i>Feedbacks</a></li>
                    <li><a href="/Sales/All"><i class="fa fa-arrow-left fa-fw"></i>Back to TechJunk</a></li>
                </ul>
            </div>
            <div class="col-md-9 well admin-content" id="home">
                @RenderBody()
            </div>
        </div>
        <hr />
        <footer class="footer">
            <p>&copy; @DateTime.Now.Year - TechJunk</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
