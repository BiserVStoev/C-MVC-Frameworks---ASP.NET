@using PagedList.Mvc
@model PagedList.IPagedList<TechJunk.Models.ViewModels.Admin.ShortFeedbackVm>
@{
    ViewBag.Title = "All Feedbacks";
}

<h2 class="interests-title">All Feedbacks</h2>

<div class="sales-container profile-sales-fix">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>@Html.Name("Topic")</th>
                <th>@Html.Name("Content")</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var feedbak in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(vm => feedbak.Topic)</td>
                    <td>@Html.DisplayFor(vm => feedbak.Content)</td>
                    <td>
                        @Html.ActionLink("Details", "Details", "Feedback", new { id = Model.First().Id, area = "Admin" }, new { @class = "btn btn-lg btn-info" })
                        @Html.ActionLink("Delete", "Delete", "Feedback", new { id = Model.First().Id, area = "Admin" }, new { @class = "btn btn-lg btn-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


@Html.PagedListPager(Model, pageNumber => Url.Action("Index", new
{
    pageNumber
}))
