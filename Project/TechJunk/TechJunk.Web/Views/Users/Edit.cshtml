@model TechJunk.Models.ViewModels.Users.EditUserVm

@{
    ViewBag.Title = "Edit Profile";
}

<h2 class="edit-profile-title">Edit Profile</h2>

@using (Html.BeginForm("Edit", "Users", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group add-label-fix">
        @Html.LabelFor(vm => vm.Name)
        @Html.EditorFor(vm => vm.Name, new { htmlAttributes = new { @class = "form-control input-center" } })
    </div>

    <div class="form-group add-label-fix">
        @Html.LabelFor(vm => vm.Email)
        @Html.EditorFor(vm => vm.Email, new { htmlAttributes = new { @class = "form-control input-center" } })
    </div>

    <div class="form-group add-label-fix">
        @Html.LabelFor(vm => vm.Address)
        @Html.EditorFor(vm => vm.Address, new { htmlAttributes = new { @class = "form-control input-center" } })
    </div>

    <div class="form-group add-label-fix">
        @Html.LabelFor(vm => vm.PhoneNumber)
        @Html.EditorFor(vm => vm.PhoneNumber, new { htmlAttributes = new { @class = "form-control input-center" } })
    </div>

    <div class="form-group add-label-fix">
        <label class="btn btn-default btn-file file-to-pad">
            Upload Image: <input type="file" name="salePicture" accept=".jpeg,.png,.jpg">
        </label>
        <br />
        @Html.ValidationMessageFor(m => m.ProfilePicture)
    </div>

    <div class="form-group add-label-fix">
        <input type="Submit" value="Edit" class="btn btn-primary btn-lg"  />
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}