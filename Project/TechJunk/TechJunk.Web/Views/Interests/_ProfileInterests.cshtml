
@using TechJunk.Web.Helpers
@model IEnumerable<TechJunk.Models.ViewModels.Interest.InterestVm>

<div class="sales-container profile-sales-fix">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th></th>
                <th>@Html.Name("Title")</th>
                <th>@Html.Name("Category")</th>
                <th>@Html.Name("Date posted")</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sale in Model)
            {
                <tr>
                    <td><div class="sale-img">@Html.Image(sale.Url, "Sale Image")</div></td>
                    <td>@Html.DisplayFor(vm => sale.Title)</td>
                    <td>@Html.DisplayFor(vm => sale.Category)</td>
                    <td>@Html.DisplayFor(vm => sale.PostDate)</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "Interests", new { sale.Id }, new { @class = "btn btn-warning btn-lg" })
                        @Html.ActionLink("Delete", "Delete", "Interests", new { sale.Id }, new { @class = "btn btn-danger btn-lg" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>