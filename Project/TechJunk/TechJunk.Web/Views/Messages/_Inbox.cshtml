@using PagedList.Mvc
@model PagedList.IPagedList<TechJunk.Models.ViewModels.Messages.ShortMessagesVm>

<div class="sales-container profile-sales-fix">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>@Html.Name("Topic")</th>
                <th>@Html.Name("Sender")</th>
                <th>@Html.Name("Date " + ViewBag.ActionToRender as string)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var message in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(vm => message.Topic)</td>
                    <td>@Html.DisplayFor(vm => message.SenderEmail)</td>
                    <td>@Html.DisplayFor(vm => message.DateMade)</td>
                    <td>
                        @Html.ActionLink("Details", "Details", "Messages", new { id = message.Id}, new { @class = "btn btn-info btn-lg" })
                        @Html.ActionLink("Delete", "Delete", "Messages", new { id = message.Id }, new { @class = "btn btn-danger btn-lg" })

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>    

@Html.PagedListPager(Model, pageNumber => Url.Action("Inbox", new
{
    pageNumber
}))