@model TechJunk.Models.ViewModels.Messages.AddMessageVm
@{
    ViewBag.Title = "Send Message";
}

<h2 class="messages-title">Compose a Message</h2>

<div>
    @using (Html.BeginForm("MessagePost", "Messages", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.RecieverId)

        <div class="form-group add-label-fix">
            @Html.LabelFor(m => m.Topic)
            @Html.EditorFor(m => m.Topic, new { htmlAttributes = new { @class = "form-control input-center", autofocus = "autofocus" } })
            @Html.ValidationMessageFor(m => m.Topic)
        </div>
        <div class="form-group add-label-fix">
            @Html.LabelFor(m => m.Description)
            @Html.TextAreaFor(m => m.Description, 15, 50, new { @class = "form-control input-center", placeholder = "Describe your sale here" })
            @Html.ValidationMessageFor(m => m.Description)
        </div>

        <div class="form-group add-label-fix">
            <input type="submit" value="Message" class="btn btn-primary btn-lg" />
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
