@model TechJunk.Models.ViewModels.Messages.DeleteMessageVm
@{
    ViewBag.Title = "Delete Message";
}

<div>
<p class="confirm-deletion">Are you sure that you want to delete this Sale?</p>
</div>

<div class="sales-container profile-sales-fix">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>@Html.NameFor(m => m.Topic)</th>
                <th>@Html.NameFor(m => m.Description)</th>
                <th>@Html.NameFor(m => m.SenderEmail)</th>
                <th>@Html.NameFor(m => m.RecieverEmail)</th>
                <th>@Html.NameFor(m => m.DateMade)</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Html.DisplayFor(vm => vm.Topic)</td>
                <td>@Html.DisplayFor(vm => vm.Description)</td>
                <td>@Html.DisplayFor(vm => vm.SenderEmail)</td>
                <td>@Html.DisplayFor(vm => vm.RecieverEmail)</td>
                <td>@Html.DisplayFor(vm => vm.DateMade)</td>
            </tr>
        </tbody>
    </table>
</div>

<div class="buttons-container">
    @Html.ActionLink("Back to my messages", "Index", null, new { @class = "btn btn-default btn-lg" })
    @using (Html.BeginForm("DeletePost", "Messages", FormMethod.Post, new { @class = "delete-margin-fix" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(vm => vm.Id)
        @Html.HiddenFor(vm => vm.UserId)
        <input type="submit" value="Delete" class="btn btn-lg btn-danger" />
    }
</div>

